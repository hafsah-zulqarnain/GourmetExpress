<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Gourmet Express"
            android:textSize="28sp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:fontFamily="@font/agbalumo_regular"/>


    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_search"/>

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Search"
            android:fontFamily="@font/roboto_regular"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/roundedButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="Search"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_regular"
        android:padding="6dp"
        android:layout_marginLeft="70dp"/>

    <!-- TextView -->
    <TextView
        android:id="@+id/myTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Restaurants"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/activity_item_element" />
        <include layout="@layout/activity_item_element" />
        <include layout="@layout/activity_item_element" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_home"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp" />

        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search_button"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp" />
        <ImageView
            android:id="@+id/ic_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cart"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>

</LinearLayout>